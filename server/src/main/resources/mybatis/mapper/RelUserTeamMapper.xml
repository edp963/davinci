<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="edp.davinci.dao.RelUserTeamMapper" >
    <insert id="insert" parameterType="edp.davinci.model.RelUserTeam">
        <selectKey resultType="java.lang.Long" order="AFTER" keyProperty="id">
            SELECT LAST_INSERT_ID() AS id
        </selectKey>
        insert ignore rel_user_team
        <trim prefix="(" suffix=")" suffixOverrides="," >
            team_id,
            user_id,
            role
        </trim>
        values
        <trim prefix=" (" suffix=")" suffixOverrides="," >
            #{teamId, jdbcType=BIGINT},
            #{userId, jdbcType=BIGINT},
            #{role, jdbcType=SMALLINT}
        </trim>
    </insert>
    
    <delete id="deleteBatch" parameterType="java.util.List">
        DELETE FROM rel_user_team WHERE id in
        <foreach collection="list" index="index" item="item" open="(" close=")" separator=",">
            #{item}
        </foreach>
    </delete>


    <insert id="insertBatch" useGeneratedKeys="true" keyProperty="id">
        insert ignore into rel_user_team
        (team_id,user_id, role)
        VALUES
        <foreach collection="set" item="record" index="index" separator=",">
            (
            #{record.teamId,jdbcType=BIGINT},
            #{record.userId,jdbcType=BIGINT},
            #{record.role,jdbcType=SMALLINT}
            )
        </foreach>
    </insert>
</mapper>