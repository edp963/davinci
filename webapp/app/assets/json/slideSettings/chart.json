{
  "name": "chart",
  "title": "图表",
  "params": [{
    "name": "size",
    "title": "图表尺寸",
    "items": [{
      "name": "width",
      "title": "宽度（像素）",
      "component": "inputnumber",
      "default": 200
    }, {
      "name": "height",
      "title": "高度（像素）",
      "component": "inputnumber",
      "default": 120
    }]
  }, {
    "name": "position",
    "title": "图表位置",
    "items": [{
      "name": "positionX",
      "title": "x轴位置（像素）",
      "component": "inputnumber",
      "labelCol": 15,
      "wrapperCol": 8
    }, {
      "name": "positionY",
      "title": "y轴位置（像素）",
      "component": "inputnumber",
      "labelCol": 15,
      "wrapperCol": 8
    }]
  }, {
    "name": "background",
    "title": "背景",
    "items": [{
      "name": "backgroundColor",
      "title": "背景颜色",
      "component": "colorPicker",
      "default": [255,255,255,0],
      "labelCol": 10
    }]
  }, {
    "name": "border",
    "title": "边框",
    "items": [{
      "name": "borderColor",
      "title": "边框颜色",
      "component": "colorPicker",
      "default": [0,0,0],
      "labelCol": 10
    }, {
      "name": "borderWidth",
      "title": "边框粗细",
      "component": "inputnumber",
      "default": 0,
      "placeholder": "像素",
      "labelCol": 10
    }, {
      "name": "borderStyle",
      "title": "边框样式",
      "component": "select",
      "values": [{
        "name": "实线",
        "value": "solid"
      }, {
        "name": "虚线",
        "value": "dashed"
      }, {
        "name": "点线",
        "value": "dotted"
      }, {
        "name": "双框",
        "value": "double"
      }],
      "default": "solid",
      "labelCol": 10
    }, {
      "name": "borderRadius",
      "title": "圆角半径",
      "component": "inputnumber",
      "default": 0,
      "placeholder": "像素",
      "labelCol": 10
    }]
  }, {
    "name": "dataRefresh",
    "title": "数据刷新",
    "items": [{
      "name": "polling",
      "title": "刷新模式",
      "component": "select",
      "values": [{
        "name": "手动刷新",
        "value": "false"
      }, {
        "name": "定时刷新",
        "value": "true"
      }],
      "default": "false",
      "labelCol": 10
    }, {
      "name": "frequency",
      "title": "时长（秒）",
      "component": "inputnumber",
      "default": "60",
      "min": 1,
      "placeholder": "秒",
      "labelCol": 10
    }]
  }]
}
